<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together">
    <objectAnimator
        android:duration="190"
        android:propertyName="strokeWidth"
        android:startOffset="0"
        android:valueFrom="2.6"
        android:valueTo="2.6" />
    <objectAnimator
        android:duration="10"
        android:propertyName="strokeWidth"
        android:startOffset="190"
        android:valueFrom="2.6"
        android:valueTo="0" />
    <objectAnimator
        android:duration="200"
        android:interpolator="@anim/ease_out"
        android:propertyName="pathData"
        android:startOffset="0"
        android:valueFrom="@string/path_slash_on"
        android:valueTo="@string/path_slash_off"
        android:valueType="pathType" />
</set>